<Window x:Class="_14_classasync.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_14_classasync"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Margin" Value="5"></Setter>
            <Setter Property="Padding" Value="5"></Setter>
            <Setter Property="FontWeight" Value="Bold"></Setter>
            <Setter Property="Background" Value="#FF501A1A"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="FontFamily" Value="Dutch801 XBd BT"></Setter>
            <Setter Property="FontSize" Value="20"></Setter>
        </Style>
        <Style TargetType ="TextBox" x:Key="pathBox">
            <Setter Property="Margin" Value="5"></Setter>
            <Setter Property="VerticalContentAlignment" Value="Center"></Setter>

        </Style>
        
    </Window.Resources>
    <DockPanel LastChildFill="False">
        <Grid DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>

            <Label VerticalAlignment="Center">From:</Label>
            <TextBox Name="srcTextBox" Grid.Column="1" Style="{StaticResource pathBox}"></TextBox>
            <Button Click="OpenFileBtn" Grid.Column="2" Margin="5" Padding="5">Browse</Button>
            
            <Label Grid.Row="1" VerticalAlignment="Center">To:</Label>
            <TextBox Name="destTextBox" Grid.Row="1" Grid.Column="1" Style="{StaticResource pathBox}"></TextBox>
            <Button Click="OpenFolderBtn" Grid.Row="1" Grid.Column="2" Margin="5" Padding="5">Browse</Button>
        </Grid>
        <Button Click="CopyFile" DockPanel.Dock="Top">Copy</Button>
        <ProgressBar Name ="progress" DockPanel.Dock="Bottom" IsIndeterminate="False" Height="30"></ProgressBar>
        <TextBlock DockPanel.Dock="Bottom" HorizontalAlignment="Center" Name ="percentage_"></TextBlock>
    </DockPanel>
    
</Window>
